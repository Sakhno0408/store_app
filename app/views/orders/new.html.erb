<h1>Оформление заказа</h1>
<div class="modal-body order-items">
  <%= render 'include/cart/cart' %>
</div>


<%= form_with model: @order, local: true do |form| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@order.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_field :credit_card %>
  </p>

  <%= select_tag "order[delivery_method_id]", options_from_collection_for_select(@delivery_methods, "id", "name_delivery_method", "1") %>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<!-- end-single -->
<input type="hidden" value="<%= !current_user.nil? ? 88 : 99 %>" id="cart_access" />
