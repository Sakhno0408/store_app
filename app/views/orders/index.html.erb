<!-- start breadcrumbs -->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><%= render_breadcrumbs :separator => ' / ' %></li>
      </ol>
    </div>
  </div>
</div>
<!-- end breadcrumbs -->
<div class="container">

  <h1>Список заказов</h1>

  <div class="table-responsive" id="orders">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Заказ №</th>
          <th>Дата</th>
          <th>Статус</th>
          <th><span class="glyphicon glyphicon-remove" aria-hidden="false"></span></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |item| %>
          <tr class="tr-item-<%= item.id %>">
            <td>
              <%= link_to order_path(item) do %>
                <%= item.number_order %>
              <% end %>
            </td>
            <td>
              <%= link_to order_path(item) do %>
                <%= item.created_at %>
              <% end %>
            </td>
            <td>
              <%= link_to order_path(item) do %>
                <%= item.status %>
              <% end %>
            </td>
            <td>
              <span data-id="<%= item.id %>" class="glyphicon glyphicon-remove text-danger del-order"></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
